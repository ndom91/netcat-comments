{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "strict": true,
    "moduleResolution": "node",
    "noEmit": true,
    "types": [
      "app.d.ts",
      "node"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
